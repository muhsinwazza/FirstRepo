@model IEnumerable<MvcAppFirst.Models.Employee>

@{
    ViewBag.Title = "Edit";
}
<!DOCTYPE html>
<html>
   <head>
@*   <style type="text/css" src="~/Resource/Styles/table.css"></style>*@

 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/css/materialize.min.css">

  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/js/materialize.min.js"></script>
   <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
   
</head>
<body>
<h2>Edit</h2>
@using (Html.BeginForm("Edit","Employee",FormMethod.Post))
{
<div class="row">
@{var list = Model.ToList();
    }
    <div class="input-field col s4">
 
        
      <input value="@list[0].Name" id="first_name2" name="Name" type="text" class="validate">
      
      <label class="active" for="first_name2">Name</label>
    </div>
    </div>
    <div class="row">
    <div class="input-field col s4">
    
        
      <input value="@list[0].Job" id="Job" name="Job" type="text" class="validate">
     
      <label class="active" for="Job">Job</label>
    </div>
    </div>
     <div class="row">
    <div class="input-field col s4">
   <select name="deptid" class="validate"  id="drop1" style="display:inline;">
   <option value="0" >--Select One--</option>
    @{
    foreach (var item in ViewBag.department)
    {
        <option value="@item.deptid">@item.Department</option>
    }
    }
    </select>
      <label class="active" for="drop1">Department</label>
    </div>
  </div>
    <div class="row">
    <div class="input-field col s4">
    <button class="btn waves-effect waves-light" type="submit" name="submit">Submit</button>
    </div>
        
    </div>
  }
  </body>